@model IEnumerable<MPGTracker.Models.OilChanges>

@{
    ViewBag.Title = "Index";
}

<h2>Oil Changes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            Miles on Car
        </th>
        <th>
            Date of Oil Change
        </th>
        <th>
            Owner
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MilesOnCar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfChange)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Car.Owner)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
            
        </td>
    </tr>
}

</table>
