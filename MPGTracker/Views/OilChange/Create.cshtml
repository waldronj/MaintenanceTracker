@model MPGTracker.Models.OilChange

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Oil Change</legend>

        <div class="editor-label">
            Miles On Car
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MilesOnCar)
            @Html.ValidationMessageFor(model => model.MilesOnCar)
        </div>

        <div class="editor-label">
            Date of Change
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateOfChange)
            @Html.ValidationMessageFor(model => model.DateOfChange)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CarId, "Car")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CarId", String.Empty)
            @Html.ValidationMessageFor(model => model.CarId)
        </div>

        <p>
            <input type="submit" value="Create" class="btn btn-primary btn-large" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
    <script>
        $(function() {
            $("#DateOfChange").datepicker();
        });
    </script>
}
