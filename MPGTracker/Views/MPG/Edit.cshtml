@model MPGTracker.Models.MPG

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MPG</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            Gallons Purchased
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GallonsPurchased)
            @Html.ValidationMessageFor(model => model.GallonsPurchased)
        </div>

        <div class="editor-label">
            Miles Traveled
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MilesTraveled)
            @Html.ValidationMessageFor(model => model.MilesTraveled)
        </div>

        <div class="editor-label">
            Date of Fillup
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateOfFillUp)
            @Html.ValidationMessageFor(model => model.DateOfFillUp)
        </div>

        <div class="editor-label">
            Car
        </div>
        <div class="editor-field">
            @Html.DropDownList("CarId", String.Empty)
            @Html.ValidationMessageFor(model => model.CarId)
        </div>

        <p>
            <input type="submit" value="Save" class="btn btn-primary btn-large" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function() {
            $("#DateOfFillUp").datepicker();
        });
    </script>
}
