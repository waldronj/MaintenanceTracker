@model MPGTracker.Models.MPG

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MPG</legend>

        <div class="editor-label">
            Gallons Purchased
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GallonsPurchased)
            @Html.ValidationMessageFor(model => model.GallonsPurchased)
        </div>
        
        <div class="editor-label">
            Price Per Gallon
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PricePerGallon)
            @Html.ValidationMessageFor(model => model.PricePerGallon)
        </div>

        <div class="editor-label">
            Miles Traveled
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MilesTraveled)
            @Html.ValidationMessageFor(model => model.MilesTraveled)
        </div>

        <div class="editor-label">
            Date of Fill Up
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateOfFillUp)
            @Html.ValidationMessageFor(model => model.DateOfFillUp)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CarId, "Car")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CarId", String.Empty)
            @Html.ValidationMessageFor(model => model.CarId)
        </div>
        <div class="editor-label">
            Password
        </div>
        <div class="editor-field">
            <input type="text" name="password"/>
        </div>

        <p>
            <input type="submit" value="Create" class="btn btn-primary btn-large"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function() {
            $("#DateOfFillUp").datepicker();
        });
    </script>
}
